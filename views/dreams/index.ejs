<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <%- include('../partials/_navbar.ejs') %>
  <title>Your Dreams</title>
</head>
<body>
  <div class="container">
    <h1>Your Dreams ğŸŒ </h1>
    <p>Here are your dreams:</p>

    <ul>
      <% if (Array.isArray(dreams) && dreams.length > 0) { %>
        <% dreams.forEach(function(dream) { %>
          <li>
            <strong>Activity:</strong> <%= dream.activity %><br>
            <strong>Category:</strong> <%= dream.category %><br>
            <strong>Status:</strong> <%= dream.status %><br>
            <a href="/users/<%= user._id %>/dreams/<%= dream._id %>">View Details</a>
            <hr>
          </li>
        <% }); %>
      <% } else { %>
        <li>No dreams added yet. <a href="/users/<%= user._id %>/dreams/add">Add a New Dream</a></li>
      <% } %>
    </ul>

    <a href="/users/<%= user._id %>/dreams/add">Add a New Dream</a>
  </div>
</body>
</html>

