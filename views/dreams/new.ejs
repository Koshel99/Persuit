<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/stylesheets/style.css" />
  <%- include('../partials/_navbar.ejs') %>
  <title>Create a New Dream</title>
</head>
<body class="dream-new">
  <div class="container-new">
    <h1>Create a New Dream</h1>
    <form class= "form-new" action="/users/<%= user._id %>/dreams" method="POST">
      
      <!-- Activity -->
      <div>
        <label for="activity">Dream Activity</label>
        <input type="text" id="activity" name="activity" required>
      </div>

      <!-- Category -->
      <div>
        <label for="category">Category</label>
        <select id="category" name="category" required>
          <option value="Adventure">Adventure</option>
          <option value="Travel">Travel</option>
          <option value="Career">Career</option>
          <option value="Health">Health</option>
          <option value="Family">Family</option>
          <option value="Finance">Finance</option>
          <option value="Hobbies">Hobbies</option>
          <option value="Education">Education</option>
          <option value="Social">Social</option>
          <option value="Entertainment">Entertainment</option>
          <option value="Giving Back">Giving Back</option>
          <option value="General">General</option>
          <option value="Skills">Skills</option>
          <option value="Risky">Risky</option>
        </select>
      </div>

      <!-- Notes -->
      <div>
        <label for="notes">Notes</label>
        <textarea id="notes" name="notes"></textarea>
      </div>

      <!-- Photo -->
      <div>
        <label for="photo">Photo (URL)</label>
        <input type="text" id="photo" name="photo">
      </div>

      <!-- Status -->
      <div>
        <label for="status">Status</label>
        <select id="status" name="status" required>
          <option value="Not Started">Not Started</option>
          <option value="In Progress">In Progress</option>
          <option value="Completed">Completed</option>
        </select>
      </div>

      <!-- Submit Button -->
      <button type="submit">Create Dream</button>
    </form>
  </div>
</body>
</html>
