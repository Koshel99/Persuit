<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/stylesheets/style.css" />
  <%- include('../partials/_navbar.ejs') %>
  <title>Edit Dream</title>
</head>
<body class="dream-new">
  <div class="container-new">
    <h1>Edit Dream</h1>
    <form class="form-new" action="/users/<%= user._id %>/dreams/<%= dream._id %>?_method=PUT" method="POST">
      
      <!-- Activity -->
      <div>
        <label for="activity">Dream Activity</label>
        <input type="text" id="activity" name="activity" value="<%= dream.activity %>" required>
      </div>

      <!-- Category -->
      <div>
        <label for="category">Category</label>
        <select id="category" name="category" required>
          <% categories.forEach(function(category) { %>
            <option value="<%= category %>" <%= dream.category %>><%= category %></option>
          <% }); %>
        </select>
      </div>

      <!-- Notes -->
      <div>
        <label for="notes">Notes</label>
        <textarea id="notes" name="notes"><%= dream.notes %></textarea>
      </div>

      <!-- Photo -->
      <div>
        <label for="photo">Photo (URL)</label>
        <input type="text" id="photo" name="photo" value="<%= dream.photo %>">
      </div>

      <!-- Status -->
      <div>
        <label for="status">Status</label>
        <select id="status" name="status" required>
          <option value="Not Started" <%= dream.status === 'Not Started' ? 'selected' : '' %>>Not Started</option>
          <option value="In Progress" <%= dream.status === 'In Progress' ? 'selected' : '' %>>In Progress</option>
          <option value="Completed" <%= dream.status === 'Completed' ? 'selected' : '' %>>Completed</option>
        </select>
      </div>

      <!-- Submit Button -->
      <button type="submit">Update Dream</button>
    </form>
  </div>
</body>
</html>
